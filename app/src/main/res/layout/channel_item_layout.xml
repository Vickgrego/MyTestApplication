<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp"
             android:descendantFocusability="blocksDescendants">

    <com.android.volley.toolbox.NetworkImageView
        android:maxWidth="80dp"
        android:maxHeight="50dp"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/channelpict"/>

    <TextView
        android:text="Channel Name"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="130dp"
        android:id="@+id/channelname"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/channelpict"
        android:layout_toEndOf="@+id/channelpict"
        android:layout_marginStart="15dp">
    </TextView>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="150dp"
        android:layout_alignTop="@+id/topreferred_but"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:id="@+id/id_container"/>

    <Button
        android:text="@string/checker_isprefereed"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:id="@+id/topreferred_but"
        android:checked="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>